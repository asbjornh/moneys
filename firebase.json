{
  "functions": {
    "predeploy": ["npm --prefix $RESOURCE_DIR run lint"]
  },
  "hosting": {
    "predeploy": "npm --prefix ./app/ run build",
    "public": "app/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
